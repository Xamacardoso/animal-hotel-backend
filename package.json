{
  "name": "animal_hotel_back",
  "version": "1.0.0",
  "main": "src/server.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/src/server.js",
    "docker:dev": "docker-compose up --build",
    "docker:dev:stop": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:prod:stop": "docker-compose -f docker-compose.prod.yml down",
    "// --- DRIZZLE ORM Comandos Locais ---": "",
    "drizzle:generate": "npx dotenv -e .env.dev -- drizzle-kit generate",
    "drizzle:studio": "npx dotenv -e .env.dev -- drizzle-kit studio",
    "// --- DRIZZLE ORM Migrações (Executa no Container) ---": "",
    "migrate:dev": "docker-compose exec api npx dotenv -e .env.dev -- ts-node src/core/database/migrate.ts",
    "migrate:prod": "docker-compose -f docker-compose.prod.yml exec api npx dotenv -e .env.prod -- node dist/src/core/database/migrate.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "express": "^5.1.0",
    "fastify": "^5.6.2",
    "fastify-type-provider-zod": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.7",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
