{
  "name": "animal_hotel_back",
  "version": "1.0.0",
  "main": "src/server.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "docker:dev": "docker-compose up --build",
    "docker:dev:stop": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:prod:stop": "docker-compose -f docker-compose.prod.yml down",
    "// --- MIGRATIONS (Executa o Prisma dentro do Docker) ---": "",
    "migrate:dev": "docker-compose exec api npx prisma migrate dev",
    "migrate:prod": "docker-compose -f docker-compose.prod.yml exec api npx prisma migrate deploy",
    "prisma:studio": "npx prisma studio",
    "prisma:local:dev:pull": "dotenv -e .env.dev -- prisma db pull",
    "prisma:local:dev:migrate": "dotenv -e .env.dev -- prisma migrate dev"
  },
  "keywords": [],
